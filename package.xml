<?xml version="1.0" encoding="UTF-8"?>
<package name="com.uz.wcf.warnings" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/2019/package.xsd">
	<packageinformation>
		<packagename>Warnings</packagename>
		<packagedescription>Extended functions for user warnings. Execute “Rebuild Data - Rebuild User Warnings” after installation and clear the cache.</packagedescription>
		<packagename language="de">Verwarnungen</packagename>
		<packagedescription language="de">Erweiterte Funktionen für Benutzer-Verwarnungen. Nach der Installation „Anzeigen aktualisieren - Benutzer-Verwarnungen aktualisieren“ ausführen und den Cache leeren.</packagedescription>
		<version>5.5.0</version>
		<date>2022-05-11</date>
	</packageinformation>
	
	<authorinformation>
		<author>Zaydowicz</author>
	</authorinformation>
	
	<requiredpackages>
		<requiredpackage minversion="5.3.0">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="5.3.0">com.woltlab.wcf.infraction</requiredpackage>
	</requiredpackages>
	
	<excludedpackages>
		<excludedpackage version="5.6.0 Alpha 1">com.woltlab.wcf</excludedpackage>
	</excludedpackages>
	
	<instructions type="install">
		<instruction type="file">files.tar</instruction>
		<instruction type="option">option.xml</instruction>
		<instruction type="sql" run="standalone">install_user.sql</instruction>
		<instruction type="language">language/*.xml</instruction>
		<instruction type="template">templates.tar</instruction>
		<instruction type="templateListener">templateListener.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="objectType">objectType.xml</instruction>
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
		<instruction type="box">box.xml</instruction>
	</instructions>
	
	<instructions type="update" fromversion="5.3.0">
		<instruction type="file">files.tar</instruction>
		<instruction type="template">templates.tar</instruction>
		<instruction type="language">language/*.xml</instruction>
	</instructions>
	
	<instructions type="update" fromversion="5.3.1">
		<instruction type="file">files.tar</instruction>
	</instructions>
	
	<instructions type="update" fromversion="5.4.0">
		<instruction type="file">files.tar</instruction>
	</instructions>
</package>
